@using Entities
@model ETicaretMvcWebUi.Models.SiparisDetay
@{
    ViewBag.Title = "Details";
}
<section class="vh-100 gradient-custom-2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-10 col-lg-8 col-xl-6">
                <div class="card card-stepper" style="border-radius: 16px;">
                    <div class="card-header p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-2"> Sipari No <span class="fw-bold text-body">@Model.KullaniciAdi</span></p>
                                @using (Html.BeginForm("DurumGuncelle", "Siparis", FormMethod.Post))
                                {
                                    @Html.HiddenFor(i => i.SiparisId)
                                    <dl class="row">
                                        <dt class="col-sm-8">
                                            @Html.EnumDropDownListFor(i => i.siparisDurumu, new { @class = "form-control" })
                                        </dt>
                                        <dd class="col-sm-4">
                                            <button type="submit" class="btn btn-primary">Değiştir</button>
                                        </dd>
                                    </dl>
                                }
                                <p class="text-muted mb-2"> Sipari No <span class="fw-bold text-body">@Model.SiparisNo</span></p>
                                <p class="text-muted mb-0"> Oluşturma tarihi <span class="fw-bold text-body">@Model.Tarih</span> </p>
                                <p class="text-muted mb-0"> Adres başlığı <span class="fw-bold text-body">@Model.Baslik</span> </p>
                                <p class="text-muted mb-0"> Şehir <span class="fw-bold text-body">@Model.Sehir</span> </p>
                                <p class="text-muted mb-0"> Adres <span class="fw-bold text-body">@Model.Adres</span> </p>
                                <p class="text-muted mb-0"> Posta kodu <span class="fw-bold text-body">@Model.PostaKodu</span> </p>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        @foreach (var item in Model.SiparisModels)
                        {
                            <div class="d-flex flex-row mb-4 pb-2">
                                <div class="flex-fill">
                                    <h5 class="bold">Ürün: @item.UrunAdi</h5>
                                    <p class="text-muted">Miktar @item.Miktar</p>
                                    <h4 class="mb-3">@item.Fiyat<span class="small text-muted">₺</span></h4>
                                    <h5 class="fw-normal bt-2 mb-0"><a class="mt-3 btn btn-success" href="/Home/Detail/@item.UrunId">Görüntüle</a></h5>
                                </div>
                                <div>
                                    <img class="align-self-center img-fluid"
                                         src="~/Img/@item.UrunResmi" width="250">
                                </div>
                            </div>
                        }
                       
                        <div class="card-footer p-4">
                            <div class="d-flex justify-content-center ">
                                <h3 class="fw-normal mb-0">Toplam Fiyat @Model.Toplam</h3>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
